{
  "name": "-",
  "private": true,
  "author": "Innei",
  "license": "MIT",
  "engines": {
    "pnpm": ">=7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --ignore-path ./.prettierignore --write ",
      "eslint --cache"
    ]
  },
  "scripts": {
    "prepare": "husky install && node scripts/should-build-pre.mjs",
    "build": "turbo run package",
    "test": "turbo run test",
    "docs": "pnpm -C docs run dev ",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx,.vue packages/** --fix",
    "format": "prettier --ignore-path ./.prettierignore --write packages/**"
  },
  "devDependencies": {
    "@innei/bump-version": "1.5.5",
    "@innei/eslint-config-react-ts": "0.9.6",
    "@innei/prettier": "0.9.6",
    "@rollup/plugin-commonjs": "24.0.0",
    "@rollup/plugin-typescript": "10.0.1",
    "@types/lodash-es": "4.17.6",
    "@types/node": "18.11.18",
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "prettier": "2.8.1",
    "rollup": "3.9.1",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-peer-deps-external": "2.2.4",
    "tsc-alias": "1.8.2",
    "turbo": "^1.6.3",
    "typescript": "4.9.4",
    "vite": "4.0.4",
    "vite-tsconfig-paths": "4.0.3",
    "vitest": "0.26.3"
  }
}
